. $(brew --prefix)/etc/profile.d/z.sh

eval "$(starship init zsh)"
eval "$(thefuck --alias f)"

alias lvim=~/.local/bin/lvim

alias c='code .'
alias lg='lazygit'
alias ld='lazydocker'
alias ghc='gh pr create --web'
alias ghv='gh pr view --web'
alias ghr='gh repo view --web'
alias ghd='gh dash'
alias gb='git checkout $(git branch | fzf)'
alias gbd='git branch -D $(git branch | fzf -m)'
alias ls="exa -al --icons --git"
alias ll="exa -al --icons --git"
alias tree="exa --tree"
alias cat="bat --theme='ansi'"

alias dcs="docker container stop $(docker container ps -aq)"
# alias python to python 3
alias python=/opt/homebrew/bin/python3


git_main_branch () {
  git branch -rl "*/HEAD" | rev | cut -d/ -f1 | rev
}

# enable vim mode
# bindkey -v
# removed for now, because it messes up with CTRL+R - need to look into this

source $HOME/.nvm_setup

# Required so gpg signing of git commits works properly
# See: https://samuelsson.dev/sign-git-commits-on-github-with-gpg-in-macos/
export GPG_TTY=$(tty)
